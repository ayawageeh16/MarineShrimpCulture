<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutStyle"
    tools:context=".view.BioSecurity"
    android:id="@+id/biosecurity_scrollview">

    <LinearLayout
        style="@style/LayoutStyle"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/biosecurity_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:background="#fff"
            android:elevation="8dp"/>

        <TextView
            android:id="@+id/biosecurity_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textDirection="ltr"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/biosecurity_summery_tv"
            style="@style/ArticleDescription"/>


        <LinearLayout
            android:id="@+id/biosecurity_linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/biosecurity_previous_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_left_arrow"
                android:background="@android:color/transparent"
                android:text="previous"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/biosecurity_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_right_arrow"
                android:text="Next"
                android:layout_gravity="left"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>