<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutStyle"
    tools:context=".view.HarvestAndPostHarvest">


    <Button
        android:id="@+id/harvest_btn"
        style="@style/ButtonsStyle"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Harvest"
        android:background="@drawable/btna"
        app:layout_constraintBottom_toTopOf="@+id/methods_harvest_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/methods_harvest_btn"
        style="@style/ButtonsStyle"
        android:layout_marginBottom="8dp"
        android:text="Methods of harvesting"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btnaw"
        app:layout_constraintBottom_toTopOf="@+id/be_careful_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/be_careful_btn"
        style="@style/ButtonsStyle"
        android:layout_marginBottom="8dp"
        android:text="Be careful"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btna"
        app:layout_constraintBottom_toTopOf="@+id/post_harvest_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989" />

    <Button
        android:id="@+id/post_harvest_btn"
        style="@style/ButtonsStyle"
        android:layout_marginBottom="152dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Post harvest"
        android:background="@drawable/btnaw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>