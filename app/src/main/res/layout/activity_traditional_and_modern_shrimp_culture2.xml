<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutStyle"
    tools:context=".view.TraditionalAndModernShrimpCulture2"
    android:id="@+id/tradiaditional_scrollview">

    <LinearLayout
        android:id="@+id/tradiaditional_linearlayout"
        style="@style/LayoutStyle"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/traditional_and_modern_img"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="300dp"
            android:background="#fff"
            android:elevation="8dp"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/image_buttons"
            style="@style/MiniLayoutStyle"
            android:visibility="invisible"
            >

            <ImageButton
                android:id="@+id/image_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_left_chevron"
                android:text="previous"
                android:visibility="invisible"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/image_next"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/image_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_right_chevron"
                android:text="Next"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>


        <TextView
            android:id="@+id/traditional_and_modern_title1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textDirection="ltr"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/traditional_and_modern_description1_tv"
            style="@style/ArticleDescription"
            />


        <TextView
            android:id="@+id/traditional_and_modern_title2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textDirection="ltr"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/traditional_and_modern_description2_tv"
            style="@style/ArticleDescription"
            />


        <TextView
            android:id="@+id/traditional_and_modern_title3_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textDirection="ltr"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/traditional_and_modern_description3_tv"
            style="@style/ArticleDescription"
            />


        <TextView
            android:id="@+id/traditional_and_modern_title4_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textDirection="ltr"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/traditional_and_modern_description4_tv"
            style="@style/ArticleDescription"
            />

        <TextView
            android:id="@+id/traditional_and_modern_title5_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textDirection="ltr"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/traditional_and_modern_description5_tv"
            style="@style/ArticleDescription"
            />
        <LinearLayout
            android:id="@+id/traditional_and_modern_linearlayout"
            style="@style/MiniLayoutStyle"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/traditional_and_modern_previous_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_left_arrow"
                android:background="@android:color/transparent"
                android:text="previous"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/traditional_and_modern_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_right_arrow"
                android:background="@android:color/transparent"
                android:text="Next"
                android:layout_gravity="left"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>